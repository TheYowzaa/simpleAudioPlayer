<Window x:Class="MyAudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Audio Player" Height="180" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Volume -->
            <RowDefinition Height="*"/>
            <!-- Media -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="Settings">
                <MenuItem Header="Select Music Folder" Click="SelectFolder_Click"/>
                <Separator/>
                <MenuItem Header="Shuffle" IsCheckable="True" Checked="Shuffle_Checked" Unchecked="Shuffle_Unchecked"/>
            </MenuItem>
            <TextBlock x:Name="CurrentFolderTextBlock" Grid.Row="1" 
           Text="No folder selected" 
           Margin="0,5" FontWeight="Bold" TextWrapping="Wrap" />
        </Menu>

        <!-- Player Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1">
            <Button x:Name="PlayPauseButton" Content="Play" Width="70" Margin="5,0" Click="PlayPause_Click"/>
            <Button Content="Previous" Width="70" Margin="5,0" Click="Previous_Click"/>
            <Button Content="Next" Width="70" Margin="5,0" Click="Next_Click"/>
        </StackPanel>


        <!-- Volume Slider -->
        <Slider x:Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.5"
                Grid.Row="2" ValueChanged="VolumeSlider_ValueChanged"/>

        <!-- Now Playing display -->
        <TextBlock x:Name="NowPlayingTextBlock" Grid.Row="3" Margin="0,5" FontWeight="Bold" TextWrapping="Wrap" Text="Now Playing: None"/>

        <!-- Media Element -->
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop" Grid.Row="3"/>
    </Grid>
</Window>
